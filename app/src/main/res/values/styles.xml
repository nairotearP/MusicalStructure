<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#512DA8</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <!-- Style for the main layouts on all activities -->
    <style name="GeneralPageLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#673AB7</item>
        <item name="android:padding">2dp</item>

    </style>
    <!-- Style for the buttons row layout on the main page -->
    <style name="MainPageButtonRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Style for the buttons on the main page -->
    <style name="MainPageButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#673AB7</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Style for the 2dp horizontal separator which is used throughout the app for invisible alignment purposes -->
    <style name="InvisibleSeparatorHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#673AB7</item>
    </style>

    <!-- Style for the 2 dp vertical separator between the buttons on all activities -->
    <style name="InvisibleSeparatorVertical">
        <item name="android:layout_width">2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#673AB7</item>

    </style>
    <!-- Style for the buttons row layout on the other screens -->
    <style name="OtherPageButtonRowLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Style for the buttons on the other screens -->
    <style name="OtherPageButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#673AB7</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Style for the layout with artist-song-station and playback controls -->
    <style name="ArtistSongStationPlaybackLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- Style for the playback controls on the bottom of each screen -->
    <style name="PlaybackControls">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#673AB7</item>
    </style>

    <!-- Style for the artist-song-station thingamajig -->
    <style name="ArtistSongStation">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">5</item>
        <item name="android:background">#673AB7</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/artist_song_station</item>
    </style>

    <!-- style for the TextViews which form the radio search thingamajig on the fm radio screen -->
    <style name="FMRadioControls">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">48sp</item>
    </style>
</resources>
